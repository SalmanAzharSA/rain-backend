# -------------------------------
# Server Configuration
# -------------------------------
PORT=3000
HOST=localhost
NODE_ENV=development # or production, staging, testing

# -------------------------------
# Database Configuration
# -------------------------------
DB_HOST=127.0.0.1
DB_PORT=27017
DB_USER=admin
DB_PASSWORD=secret
DB_NAME=my_database
DB_URI=mongodb://127.0.0.1:27017/my_database # For direct URI usage

# -------------------------------
# Authentication & Security
# -------------------------------
JWT_ACCESS_TOKEN_SECRET=myjwtsecretkey
JWT_EXPIRATION=3600 # In seconds (e.g., 1 hour)
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=myrandomsessionsecret

# -------------------------------
# API Keys and Tokens
# -------------------------------
GOOGLE_API_KEY=your_google_api_key
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# -------------------------------
# Email Configuration
# -------------------------------
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_USER=username
EMAIL_PASSWORD=password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_REPLY_TO=support@yourdomain.com

# -------------------------------
# Cloud Storage Configuration
# -------------------------------
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your_bucket_name
GCP_PROJECT_ID=your_gcp_project_id
GCP_STORAGE_BUCKET=your_gcp_bucket_name
AZURE_STORAGE_ACCOUNT=your_azure_account_name
AZURE_STORAGE_KEY=your_azure_account_key

# -------------------------------
# Redis Cache Configuration
# -------------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# -------------------------------
# Logger Configuration
# -------------------------------
LOG_LEVEL=info # Possible values: error, warn, info, verbose, debug, silly
LOG_FILE_PATH=logs/app.log

# -------------------------------
# Frontend Configuration
# -------------------------------
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=8080

# -------------------------------
# Payment Gateway Configuration
# -------------------------------
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# -------------------------------
# Third-Party Services
# -------------------------------
SENDGRID_API_KEY=your_sendgrid_api_key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your_slack_webhook_url
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret

# -------------------------------
# Debugging
# -------------------------------
DEBUG=app:* # Enable specific debug namespaces (for libraries like debug)
TRACE=true # Enable detailed tracing
